            "TokenValidationParameters": {
                "ValidAlgorithms": [ "HS256" ],
                "ValidAudience": "GmApiUser",
                "ValidIssuer": "GmApi"
            }
        },
        "Cookies": {
            "Default": {
                "MaxAge": "1.00:00:00",
                "HttpOnly": true,
                "IsEssential": true,
                "SameSite": "Strict",
                "SecurePolicy": "Always"
            },
            "Identity.Application": {
                "LoginPath": "/Account/Login",
                "LogoutPath": "/Account/Logout",
                "ExpireTimeSpan": "1.00:00:00",
                "SlidingExpiration": true
            },
            "Identity.TwoFactorRememberMe": {
                "ExpireTimeSpan": "30.00:00:00"
            },
            "Identity.TwoFactorUserId": {
                "ExpireTimeSpan": "00:05:00"
            },
            "Identity.External": {
                "ExpireTimeSpan": "00:05:00"
            }
        }
    },
    "Email": {
        "Enabled": true,
        "SmtpServer": "smtp.gmail.com",
        "SmtpPort": 587,
        "SmtpLogin": "dev.goodmojo@gmail.com",
        "SmtpPassword": "ksxpufxfcofofamg",
        "EnableSsl": true,
        "DefaultSender": "dev.goodmojo@gmail.com",
        "OverrideRecipient": null,
        "ErrorRecipient": null
    },
    "Identity": {
        "Lockout": {
            "AllowedForNewUsers": false,
            "MaxFailedAccessAttempts": 5,
            "DefaultLockoutTimeSpan": "00:05:00"
        },
        "Password": {
            "RequireDigit": true,
            "RequiredLength": 6,
            "RequireNonAlphanumeric": true,
            "RequireUppercase": true,
            "RequireLowercase": false,
            "RequiredUniqueChars": 6
        },
        "User": {
            "RequireUniqueEmail": true
        },
        "SignIn": {
            "RequireConfirmedAccount": true,
            "RequireConfirmedEmail": true,
            "RequireConfirmedPhoneNumber": false
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "Console": {
            "FormatterName": "GmConsoleFormatter",
            "FormatterOptions": {
                "SingleLine": true,
                "IncludeScopes": false,
                "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] ",
                "UseUtcTimestamp": false
            }
        },
        "Color": {
            "Trace": "Gray",
            "Debug": "White",
            "Information": "Green"
        }
    },
    "Debug": {
        "DefaultLoginEmail": "",
        "DefaultLoginPassword": ""
