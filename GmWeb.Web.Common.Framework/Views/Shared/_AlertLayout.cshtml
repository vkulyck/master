<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoodMojo | @ViewBag.Title</title>
    @Styles.Render("~/Content/Bundles/kendo")
    @Styles.Render("~/Content/Bundles/css")
    @Scripts.Render("~/Scripts/Bundles/gm-preload")
    <style>
        :root {
            font-size: 16px;
        }
    </style>
</head>
<body class="pace-done">
    <style>
        #main-container {
            max-width: 100%;
            max-height: 100%;
            width: fit-content;
            height: fit-content;
            border-radius: .5rem;
            box-shadow: 0px 4px 10px 0px rgba(8, 13, 18, 0.3);
            padding: 3em;
            position: absolute;
            margin: auto;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
        }
    </style>
    <div id="main-container" class="middle-box text-center animated fadeInDown gray-bg alert alert-@(ViewBag.AlertType)" role="alert">
        @RenderBody()
    </div>
    @Scripts.Render("~/Scripts/Bundles/jquery")
    @Scripts.Render("~/Scripts/Bundles/jquery.validate")
    @Scripts.Render("~/Scripts/Bundles/bootstrap")
    @Scripts.Render("~/Scripts/Bundles/metisMenu")
    @Scripts.Render("~/Scripts/Bundles/pace")
    @Scripts.Render("~/Scripts/Bundles/slimScroll")
    @Scripts.Render("~/Scripts/Bundles/modernizr")
    @Scripts.Render("~/Scripts/Bundles/jSignature")
    @Scripts.Render("~/Scripts/Bundles/sparkline")
    @Scripts.Render("~/Scripts/Bundles/moment")
    @Scripts.Render("~/Scripts/Bundles/pwstrength")
    @Scripts.Render("~/Scripts/Bundles/kendo")
    @Scripts.Render("~/Scripts/Bundles/inspinia")
    @Scripts.Render("~/Scripts/Bundles/gm-postload")
    @Scripts.Render("~/Scripts/Bundles/qrcode")

    @Html.Partial("_Scripts")
    @RenderSection("scripts", required: false)
    @Html.RenderDelayed()
    @Html.Razor().DeferredScripts()
</body>
</html>

