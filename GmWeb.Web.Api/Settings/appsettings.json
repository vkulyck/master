{
    "Identity": {
        "Lockout": {
            "AllowedForNewUsers": false,
            "MaxFailedAccessAttempts": 5,
            "DefaultLockoutTimeSpan": "00:05:00"
        },
        "Password": {
            "RequireDigit": false,
            "RequiredLength": 6,
            "RequireNonAlphanumeric": false,
            "RequireUppercase": false,
            "RequireLowercase": false,
            "RequiredUniqueChars": 6
        },
        "User": {
            "RequireUniqueEmail": true
        }
    },
    "Auth": {
        "Jwt": {
            "Issuer": "GmApi",
            "Audience": "GmApiUser",
            "ClockSkew": "00:02:30",
            "AuthLifetime": "00:10:00",
            "RefreshLifetime": "3.00:00:00",
            "ValidateIssuer": true,
            "ValidateAudience": true,
            "ValidateLifetime": true,
            "ValidateIssuerSigningKey": true,
            "RequireHttpsMetadata": true,
            "SaveToken": true,
            "RefreshSource": "Cookie, Parameter, Header",

            "TokenValidationParameters": {
                "ValidAlgorithms": [ "HS256" ],
                "ValidAudience": "GmApiUser",
                "ValidIssuer": "GmApi"
            }
        },
        "Cookies": {
            "Default": {
                "MaxAge": "1.00:00:00",
                "HttpOnly": true,
                "IsEssential": true,
                "SameSite": "Strict",
                "SecurePolicy": "Always"
            }
        }
    },
    "Swagger": {
        "DisplayName": "Carma",
        "Description": "Client-Agency Relationship Management Application",
        "Enabled": true
    },
    "Email": {
        "Enabled": true,
        "SmtpServer": "smtp.gmail.com",
        "SmtpPort": 587,
        "SmtpLogin": "dev.goodmojo@gmail.com",
        "SmtpPassword": "ksxpufxfcofofamg",
        "EnableSsl": true,
        "DefaultSender": "dev.goodmojo@gmail.com",
        "OverrideRecipient": null,
        "ErrorRecipient": null
    },
    "AllowedHosts": "*",
    "ForwardedHeaders": "None",
    "Logging": {
        "Console": {
            "FormatterName": "GmConsoleFormatter",
            "FormatterOptions": {
                "SingleLine": true,
                "IncludeScopes": false,
                "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] ",
                "UseUtcTimestamp": false
            }
        }
    },
    "ApiControllers": {
        "Activity": {
            "MaximumListPeriodCount": {
                "Daily": 30,
                "Weekly": 1,
                "Monthly": 2
            },
            "TargetActivityCount": {
                "Daily": 10
            }
        }
    }
}
