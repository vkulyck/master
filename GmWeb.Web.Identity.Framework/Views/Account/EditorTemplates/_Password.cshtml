@using GmWeb.Web.Identity.Models
@using GmWeb.Web.Identity.Models.ProviderConfiguration
@model PasswordConfigurationViewModel

@if (Model.ManagementTask == ManagementTask.Update)
{
    @Html.GmRazor().PasswordFormItem(m => m.CurrentPassword)
    <small>@Html.ActionLink("Forgot password?", "RequestPasswordResetToken")</small>
}
else if (Model.ManagementTask == ManagementTask.Reset)
{
    @Html.GmRazor().FormItem(m => m.Email).Disable()
    @Html.GmRazor().FormItem(m => m.Token).Disable()
}
@using (var meter = Html.GmRazor().BeginPasswordMeter(m => m.NewPassword)) { }
@Html.GmRazor().PasswordFormItem(m => m.ConfirmPassword)