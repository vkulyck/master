@using System.Linq;
@using System.Linq.Expressions;
@using System.Threading.Tasks;
@using Kendo.Mvc.UI;
@using Microsoft.AspNetCore.Html;
@using GmWeb.Web.RHI.Utility;
@using GmWeb.Logic.Utility.Attributes;
@using GmWeb.Logic.Utility.Extensions.Reflection;
@using GmWeb.Logic.Utility.Extensions.Enums;

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
            <li class="nav-header">
                <div class="nav-header-logo">
                    <div class="row">
                        <div class="col">
                            <img src="/img/rh-logo.jpg" class="rounded mx-auto d-block">
                        </div>                        
                    </div>
                </div>
                <div class="nav-header-title">
                    <span class="nav-header-title">Responder Health</span>
                </div>
            </li>
            @if (this.Html.IsDevelopment())
            {
                <li id='NavItem-Profile'>
                    <a class="nav-link" href="@(Url.ActionLink("Index", "Profile"))">
                        <i class="fa fa-th-large"></i>
                        <span class="nav-label">Profile</span>
                    </a>
                </li>
            }
            <li id='NavItem-Intake' class="active">
                <a class="nav-link" aria-expanded="true">
                    <i class="fa fa-th-large"></i>
                    <span class="nav-label">Questionnaire</span>
                    <span class="fa arrow"></span>
                </a>
                <ul class="nav nav-second-level collapse in" aria-expanded="true">
                    @foreach(var pg in IntakePage.GetPages())
                    {
                        <li id="@pg.NavMenuID"> 
                            <a class="nav-link" onclick="@pg.CacheGotoInvocation" >
                                <i class="@pg.TabIcon"></i>
                                <span class="nav-label">@pg.Display</span>
                            </a>
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </div>
</nav>