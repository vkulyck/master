@using GmWeb.Web.Profile.Models.Waitlist
@model ClientQuery

<table class="table">
    <thead>
        <tr>
            <th style="width: 20%"></th>
            <th style="width: 80%"></th>
        </tr>
    </thead>
    <tr>
        <td>
            Request Text
        </td>
        <td>
            @(Html.GmRazor().Defaults.AutosizeTextarea().DataBind("RequestText"))
        </td>
    </tr>
    <tr>
        <td>
            Variable Name
        </td>
        <td>
            @(Html.GmRazor().Defaults.AutosizeTextarea().DataBind("VariableName"))
        </td>
    </tr>
    <tr>
        <td>
            Data Source
        </td>
        <td>
            @(Html.GmRazor().Dropdown<DataSource>().Display(x => x.Name).Value(x => x.DataSourceID).Values(DataSource.Options()).DataBind("DataSourceID").Style("float: right"))
        </td>
    </tr>
</table>