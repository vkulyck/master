@using GmWeb.Web.Common

@model GmWeb.Web.Common.Models.BasePageViewModel

@helper CreateNavItem(string controller, string label, string icon)
{
    <li class="@Html.IsSelected(controller: @controller)">
        <a href="@Url.Action("Index", @controller)"><i class="fa fa-@icon"></i> <span class="nav-label">@label</span></a>
    </li>
}

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav" id="side-menu">
            <li class="nav-header">
                <div class="dropdown profile-element">
                    <span>
                        <i class="fa fa-user" style="font-size:40px; color: #ffffff;"></i>
                    </span>
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <span class="clear">
                            <span class="block m-t-xs">
                                <label class='font-bold h4'>@(Model.FullName)</label>
                            </span> <span class="text-muted text-xs block">Account Settings <b class="caret"></b></span>
                        </span>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight m-t-xs">
                        <li><a href="./ProfileSetup.aspx">Manage Account</a></li>
                        <li class="divider"></li>
                        <li><asp:LinkButton ID="LinkButtonLogout" runat="server"><i class="fa fa-sign-out"></i> Log out</asp:LinkButton></li>
                    </ul>
                </div>
                <div class="logo-element">
                    <span><i class="fa fa-user" style="font-size:40px; color: #ffffff;"></i></span>
                </div>
            </li>
            @CreateNavItem("Home", "Home", "home")
            <li class="@Html.IsSelected(controller: "Services")">
                <a href="@Url.Action("Index", "Services")"><i class="fa fa-calendar"></i> <span class="nav-label">Services</span></a>
            </li>
            <li class="@Html.IsSelected(controller: "Volunteering")">
                <a href="@Url.Action("Index", "Volunteering")"><i class="fa fa-handshake-o"></i> <span class="nav-label">Volunteering</span></a>
            </li>
            <li class="@Html.IsSelected(controller: "Donations")">
                <a href="@Url.Action("Index", "Donations")"><i class="fa fa-dollar"></i> <span class="nav-label">Donations</span></a>
            </li>
            <li class="@Html.IsSelected(controller: "ClientProfile")">
                <a href="@Url.Action("Index", "ClientProfile")"><i class="fa fa-address-card-o"></i> <span class="nav-label">Client Profile</span></a>
            </li>
            <li class="@Html.IsSelected(controller: "ProfileSearch")">
                <a href="@Url.Action("Index", "ProfileSearch")"><i class="fa fa-address-book-o"></i> <span class="nav-label">Profile Search</span></a>
            </li>
            @CreateNavItem("Waitlist", "Waitlists", "project-diagram")
        </ul>
    </div>
</nav>